html, body, div, ul, li, p, a, input, button, textarea
  margin: 0
  padding: 0
  font-size: 14px
  color: #333
  font-family -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;

ul, li, ol
  list-style: none

button
  outline none

a
  text-decoration: none

.text-break
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

.fix
  &:after
    display: table
    content: ' '
    height: 0
    visibility: hidden
    clear both

.inp-wrap
  input.err
    border-color red !important

body
  overflow-x hidden

.container
  width 1210px
  margin 0 auto

iframe
  display none

iframe html, iframe body
  margin 0

.form-control
  input, textarea
    &:focus
      border-color #c8a858
  .hint-err
    position absolute
    color: #ff3f34

#idea
  display block
  position fixed
  right 30px
  bottom 120px
  z-index 999
  width 100px
  height 100px

@media screen and (max-width: 1367px)
  #idea
    width 80px
    height 80px
    -webkit-background-size: 100%
    background-size: 100%
