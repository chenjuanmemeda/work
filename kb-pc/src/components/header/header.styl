.node-tips
  border-top 1px solid #eee
  font-size: 16px
  padding 6px 15px
  #node-error-text
    display none
    margin-left: 15px
    color: red
    font-size: 14px

.node-list
  padding 10px 15px
  font-size: 0
  max-height 240px
  overflow hidden
  overflow-y scroll
  li
    line-height 25px
    margin-bottom: 12px
  .node
    font-size: 14px
    .left-content
      display inline-block
      font-size: 14px
      .no
        margin-right: 5px
        text-align center
        padding 2px 8px
        background-color: #8cc152
        color: #fff
        font-style normal
        vertical-align: middle
      .name
        font-size: 16px
        vertical-align: middle
    .ms
      float: right
      font-size: 12px
      margin-right: 10px
      vertical-align: middle
      &.green
        color: #00c600
      &.yellow
        color orange
      &.red
        color: red
    .node-btn
      float: right
      padding 1px 5px
      width 70px
      text-align center
      color: #fff
      background-color: #e0c26c
      cursor pointer
      &.disabled
        background-color: #bbb
        cursor not-allowed

.node-list::-webkit-scrollbar
  width: 6px;

.node-list::-webkit-scrollbar-track-piece
  background-color: rgba(0, 0, 0, 0);
  -webkit-border-radius: 6px;

.node-list::-webkit-scrollbar-thumb:vertical
  height: 3px;
  background-color: rgba(100, 100, 100, 0.4);
  -webkit-border-radius: 26px;

.node-list::-webkit-scrollbar-thumb:horizontal
  width: 3px;
  background-color: rgba(100, 100, 100, 0.4);
  -webkit-border-radius: 26px;


