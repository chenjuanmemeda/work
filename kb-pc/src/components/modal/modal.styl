
.cjdl-modal
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color: rgba(0, 0, 0, .6)
  overflow-x hidden
  overflow-y auto
  .modal-wrap
    position relative
    margin 150px auto
    width 500px
    background-color: #fff
    border-radius 5px
    box-sizing border-box
    &.pos-middle
      position absolute
      margin 0
      top 45%
      left 50%
      transform translate(-50%, -50%)
    &.small
      width 300px
    &.mid
      width 600px
    &.big
      width 860px
    &.big-plus
      width 1200px
    .modal-header
      position relative
      border-bottom 1px solid #eee
      .title
        float: left
        margin 0
        padding 15px 20px
        font-weight: normal
        height 15px
      .close-modal
        position absolute
        right 0
        display block
        padding 7px 20px
        font-style normal
        cursor pointer
        font-size: 20px
    .modal-body
      padding 20px
      &.overdue-body
        padding 40px 20px
        .due
          margin 0 auto
          width 360px
          height 245px
          background-image: url(../../img/due.png)
        .close-modal
          position absolute
          top 0
          right 0
          display block
          padding 7px 20px
          font-style normal
          cursor pointer
          font-size: 20px
        .tit-1
          font-size: 24px
          color: #c8a258
          margin-bottom 10px
          text-align center
        .tit-2
          font-size: 18px
          color: #999
          text-align center
        .btn-wp
          margin-top 40px
          text-align center
          .btn
            margin 0 12px
            border-radius 99px
            padding 7px 30px
            font-size: 18px
            border: 2px solid #8cc152
            background-color: #8cc152
            outline none
      .title
        margin 0
        text-align center
      .alert-info
        margin 20px 0 10px
        line-height 24px
        text-indent 24px
      img
        width 100%
      &.recharge
        padding 5px
        min-height 260px
      &.protocol
        padding 20px 35px
        .protocol-title
          text-align center
          margin 0 0 20px
        .protocol-sc
          line-height 18px
          margin-bottom 18px
          &.mb5
            margin-bottom: 5px
        .sc-tit
          padding-top 10px
          margin 0 0 8px 0
        .sc-tit-small
          margin 0 0 5px 0
    .modal-footer
      display block
      border-top 1px solid #eee
      padding 12px 20px
      text-align center

