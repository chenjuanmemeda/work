@import "./common/mixin.styl";

.bg
  background-image: url(./img/float-sign-bg.png)
  width 100%
  height 100vh
  overflow: hidden
  background-repeat: no-repeat
  background-position: center center

.welcome
  display none
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%);

.float-sign
  position fixed
  left 50%
  top 50%
  transform translate(-50%, -50%)
  background-color: rgba(255, 255, 255, .55)
  padding 20px
  box-sizing border-box
  border-radius 5px
  .tit-logo
    margin 0 auto 50px
    width 100px
    height 100px
    -webkit-background-size: 100%
    background-size: 100%
    background-image: url(./img/logo.png)
  .form-control
    position relative
    .icon
      position absolute
      top 2px
      left 5px
      display block
      width 50px
      height 50px
      &.mb
        background-image: url(./img/mb-icon.png)
      &.pwd
        background-image: url(./img/mb-lock.png)
    input
      border 1px solid #ddd
      padding 18px 10px 18px 60px
      margin-bottom 20px
      border-radius 5px
      width 356px
      font-size: 18px
      box-sizing border-box
    .btn
      border-radius 5px
      padding 10px 20px
      color: #fff
      border 0
      width 356px
      background-color: #3f52ff
      cursor pointer
      font-size: 20px
      margin-top 40px
      margin-bottom 10px
      &:disabled
        opacity 0.5


