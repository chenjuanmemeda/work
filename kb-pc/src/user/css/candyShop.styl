@import "./user.styl"

.goods-wrap
  text-align center
  .tit
    margin 30px 0 20px
    color: #c29949
    text-align: center
    font-size: 24px
  .goods-list
    width 100%
    margin 0 auto
    font-size: 0px
    .item
      float: left
      margin 0 29px 20px
      background-color: #fff
      height 292px
      width 400px
      cursor pointer
      color: #333
      border 1px solid #eee
      text-align center
      transition box-shadow 0.5s ease
      .candy-bg
        width 310px
        height 150px
        margin 30px auto
        background-image: url(../../img/candy-bg.png)
        background-position: center center
        .candy-detail
          color: #fff
          text-shadow 0 3px 8px #ad6515
          line-height 150px
          .count
            font-size: 100px
            vertical-align: middle
          .other
            font-size: 40px
            vertical-align: middle
      .goods-name
        font-size: 28px
      .need-candy
        color: #999
        font-size: 16px
      &:hover
        box-shadow 0 4px 12px #ccc

  .no-info
    display none
    border 0
    margin 80px auto 0
    width 322px
    height 393px
    background-image: url(../../img/no-info.png)

#goodsDetail
  width 400px

.modal-body
  .candy-modal-bg
    width 400px
    height 190px
    margin 0 auto 15px
    -webkit-background-size: 100%
    background-size: 100%
    background-image: url(../../img/candy-bg.png)
    .candy-detail
      color: #fff
      text-shadow 0 3px 8px #ad6515
      line-height 190px
      .count
        font-size: 120px
        vertical-align: middle
      .other
        font-size: 55px
        vertical-align: middle
  .goods-name
    margin 10px 0 5px
    font-size: 24px
  .need-candy
    color: #999
    font-size: 16px
    margin-bottom 15px
  .goods-statement
    text-align left
    margin 20px 30px
    padding 20px 35px
    border-radius 5px
    border: 1px solid #eee
    .lab
      color: #c29949
      font-size: 20px
      margin-bottom 10px
    .info
      font-size: 16px
  #convert
    margin-bottom 40px
    padding 10px 30px
    font-size: 24px
    border-radius 99px
    background-color: #8cc152
    &.disabled
      background-color: rgba(51, 51, 51, 0.3)

#successModal
  .modal-body
    padding 20px
    .success-icon
      margin 0 auto
      width 177px
      height 177px
      background-image: url(../../img/success.png)
    .text
      margin 25px 0 15px
      color: #c29949
      font-size: 24px
    .detail
      margin-bottom 50px
      font-size: 24px
      font-weight: bold
      .red
        margin-left 10px
        color: red
        font-size: 24px
    .date
      margin-bottom 40px
      color: #999
    .close-mask
      padding 8px 35px
      font-size: 18px
      border-radius 99px
      background-color: #8cc152
      font-weight: bold
      color: #fff
      margin-bottom 30px

