.successModal
  .modal-body
    padding 20px
    .success-icon
      margin 0 auto
      width 177px
      height 177px
      background-image: url(../../img/success.png)
    .text
      margin 25px 0 20px
      color: #333
      font-size: 24px
    .detail
      margin-bottom 25px
      font-size: 18px
    .close-mask
      display block
      width 100px
      margin 0 auto
      padding 8px 35px
      font-size: 18px
      border-radius 99px
      background-color: #8cc152
      font-weight: bold
      color: #fff
      margin-bottom 20px

#pagination
  font-size: 0
  text-align right
  margin-top 10px
  height 30px
  li
    display inline-block
    &.active
      border-color red !important
      color: #fff
  .page
    margin-right 10px
    border-radius 3px
    border: 1px solid #aaaaaa
    a
      display block
      font-size: 12px
      padding 3px 7px
      line-height 14px
      cursor pointer
    &:hover
      border-color #8cc152
      background-color: #8cc152
    &:hover a
      color: #fff
  .totalCount
    padding 4px 5px
    font-size: 12px

.warningModal
  .modal-body
    .warning-icon
      display inline-block
      margin-right 10px
      width 52px
      height 52px
      background-image: url(../../img/warning.png)
      vertical-align: middle
      line-height 230px
    .info
      display inline-block
      font-size: 24px
      vertical-align: middle
      line-height 230px
  .modal-footer
    border-top 1px solid #eee
    padding 50px
    .btn
      padding 8px 30px
      border-radius 99px
      font-size: 18px
      &.cannel
        background-color: #fff
        color: #8cc152
        border: 2px solid #8cc152
      &.ok
        background-color: #8cc152
        border: 2px solid #8cc152