@import "./user.styl"

.tit
  margin 30px 0 20px
  color: #c29949
  text-align: center
  font-size: 24px

.log-tit
  text-align left
  margin-bottom 30px
  font-size: 20px
  font-weight: bold

.myWallet-wrap
  padding 0 30px
  margin-bottom 60px
  .info-wrap
    width 100%
    margin 0 auto
    .item
      float: left
      margin-right 50px
      padding 30px 0 40px
      text-align center
      width 390px
      background-color: #f2f2f2
      .lab
        font-size: 18px
      .num
        margin 40px 0 70px
        color: red
        font-size: 48px
      .btn
        padding 5px 30px
        font-size: 28px
        border-radius 99px
      &:last-child
        margin-right 0
  .myWallet-log
    margin-top 62px
    .log-table
      width 100%
      box-sizing content-box
      thead
        background-color: #f2f2f2
        border 1px solid #f2f2f2
        tr th
          padding 20px 30px
          font-size: 16px
          text-align left
      tbody
        tr
          border 1px solid #f2f2f2
          td
            padding 30px
            font-size: 16px

.bankCardList-wrap
  display none
  .form-wrap
    .form-control
      margin-bottom 45px
      .form-lab
        display inline-block
        width 185px
        font-size: 16px
        line-height 60px
        text-align right
      .form-inp, .form-select
        border-radius 5px
        padding 20px 25px
        font-size: 15px
        border: 1px solid #c29949
        width 440px
        box-sizing border-box
      .btn
        background-color: #8cc152
        padding 10px 40px
        font-size: 20px
        border-radius 99px
        font-weight: bold
  .bankCard-list
    .log-table
      width 100%
      box-sizing content-box
      thead
        background-color: #f2f2f2
        border 1px solid #f2f2f2
        tr th
          padding 20px 30px
          font-size: 16px
          text-align left
      tbody
        tr
          border 1px solid #f2f2f2
          td
            padding 30px
            font-size: 16px
            .remove-bankcard
              display block
              cursor pointer
              color: #c29949

